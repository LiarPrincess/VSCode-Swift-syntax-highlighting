{
  "name": "swift-html",
  "displayName": "Swift+HTML",
  "description": "HTML syntax highlighting in String literals.",
  "version": "0.0.1",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/LiarPrincess/VSCode-Swift-syntax-highlighting"
  },
  "sponsor": {
    "url": "https://github.com/LiarPrincess"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "swift",
    "swiftlang",
    "html"
  ],
  "activationEvents": [
    "onLanguage:swift",
    "workspaceContains:Package.swift"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "path": "./syntaxes/injection.tmLanguage.json",
        "scopeName": "injection.html.swift",
        "injectTo": [
          "source.swift"
        ],
        "embeddedLanguages": {
  "text.html": "html",
  "source.css": "css",
  "source.js": "javascript"
}
      }
    ]
  },
  "scripts": {
    "clean": "rm -r out",
    "build": "npm run clean; tsc",
    "watch": "npm run clean; tsc -watch",
    "vscode:prepublish": "npm run build",
    "package": "npx vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/node": "20.x",
    "typescript": "^5.7.3"
  }
}
