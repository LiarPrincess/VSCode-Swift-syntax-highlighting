// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run HTML",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension_html"
      ],
      "outFiles": [
        "${workspaceFolder}/extension_html/out/**/*.js"
      ],
      "preLaunchTask": "Watch HTML"
    },
    {
      "name": "Run SQL #",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension_sql_1_pound"
      ],
      "outFiles": [
        "${workspaceFolder}/extension_sql_1_pound/out/**/*.js"
      ],
      "preLaunchTask": "Watch SQL 1 pound"
    },
    {
      "name": "Run SQL ##",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension_sql_2_pounds"
      ],
      "outFiles": [
        "${workspaceFolder}/extension_sql_2_pounds/out/**/*.js"
      ],
      "preLaunchTask": "Watch SQL 2 pounds"
    },
    {
      "name": "Generate extensions",
      "program": "${workspaceFolder}/generate_extensions.js",
      "request": "launch",
      "runtimeExecutable": "node",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}
